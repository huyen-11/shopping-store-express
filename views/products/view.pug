extends ../layouts/common

block content

  h1
    span Product list
    a.btn.btn-primary.float-right(href="/books/create") Borrow book
  div.container
    .row
      each product in products
        .card.col-3.mb-3
          img.card-img-top(src= product.image)
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            a.btn.bg-secondary(href='#') Add to cart
block page
  nav.float-right(aria-label='...')
    ul.pagination
      li.page-item
        a.page-link(href="/products", tabindex='-1', aria-disabled='true') First
      li.page-item.active(aria-current='page')
        a.page-link(href="/products?page=" + page)= page
          span.sr-only (current)
      li.page-item
        a.page-link(href="/products?page=" + ++page)= page
      li.page-item
        a.page-link(href="/products?page=" + ++page)= page
