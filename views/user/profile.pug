extends ../layouts/common

block content
    .container
        .page-body
            .user-options-wrapper
                .user-options
                    ul(class="user-account-option")
                      a(href="/user/profile")
                        li.active My details
                      a(href="/user/cart")
                        li My cart
                      a(href="/user/order")
                        li My order
                      a(href="/sign/out" id="sign-out")
                        li Log out
            .user-details-wrapper
                .user-details
                    h1 My Details
                    form(method="POST", action=`/user/profile/${user._id}`, enctype="multipart/form-data")
                        div(class= "input-block")
                          label.input-label(for='name') Full name*
                          input#name(type='', name='name', placeholder="Your full name", value=user ? user.name : "", required)
                        div(class= "input-block")
                          label.input-label(for='phone') Phone number*
                          input#phone(type='', name='phone', placeholder="Your phone number", value=user ? user.phone : "", required)
                        div(class= "input-block")
                          label.input-label(for='address') Address*
                          input#address(type='', name='address', placeholder="Your address", value=user ? user.address : "", required)
                        div(class= "input-block")
                          label.input-label(for='dob') Date of Birth
                          input#dob(type='', name='dob', placeholder="Your DOB", value=user ? user.dob : "")
                        div(class= "input-block")
                          label.input-label(for='avatar') Avatar
                          input#avatar(type='file', name='avatar')
                        div(class= "input-block")
                          label.input-label(for='email') Sign in email
                          input#email(type='', name='email', value=user.email)
                        button Update


