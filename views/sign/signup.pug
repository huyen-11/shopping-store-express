extends ../layouts/common

block content
    .signup-page
        .signin-container.signup-container
            .signin-left
              h1.signin-title Sign up form
              p.signin-desc Explore all the benefits. <br> View your purchase and return history
              form(action="/sign/up" method="POST")
                div(class= "input-block")
                  label.input-label(for='signupEmail') Email
                  input#signupEmail(type='', name='email', placeholder='Email')
                div(class= "input-block")
                  label.input-label(for='name') Full name
                  input#name(type='name', name='name', placeholder='Your full name')
                div(class= "input-block")
                  label.input-label(for='phone') Phone number
                  input#phone(type='phone', name='phone', placeholder='Your phone number')
                div(class= "input-block")
                  label.input-label(for='signupPassword') Password
                  input#signupPassword(type='password', name='password', placeholder='Password')
                .signin-buttons
                  a(href='')
                  button.login-button Sign up
            .signin-right
              img(src='/images/banner-phone.jpg')
              