extends ../layouts/common

block content
  h1 Your profile
  if errors
    each error in errors
      .alert.alert-danger= error
  form(action="/users/view/" + id + "/update" method="POST")
    label(for="name") Name
    br
    input(id="name" name="name", class="mb-2", placeholder= user.name)
    br
    button(class="btn btn-primary") Change
